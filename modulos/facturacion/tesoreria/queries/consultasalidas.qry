<!DOCTYPE QRY>
<QRY>
	<name>consultasalidas</name>
	
	<tables>facturascli,pagosmulticli</tables>
	
	<select>
		consultasalidas.fecha,
		consultasalidas.tipo,
		consultasalidas.codigo,
		consultasalidas.codcliente,
		consultasalidas.nombrecliente,
		consultasalidas.total,
		consultasalidas.coddivisa,
		consultasalidas.observaciones
	</select>
	
	<from>
		(
		SELECT fc.fecha, 'Factura Contado' as tipo, fc.codigo, fc.codcliente, fc.nombrecliente, fc.total, fc.coddivisa, '' as observaciones
		FROM facturascli AS fc WHERE fc.tipoventa = 'Factura' AND fc.codpago NOT IN ('CTACTE')
		
		UNION
		SELECT fc.fecha, 'Factura Cta.Cte.' as tipo, fc.codigo, fc.codcliente, fc.nombrecliente, fc.total, fc.coddivisa, rcli.idpagomulti::varchar as observaciones
		FROM facturascli AS fc LEFT OUTER JOIN reciboscli AS rcli ON fc.idfactura = rcli.idfactura
		WHERE fc.tipoventa = 'Factura' AND fc.codpago IN ('CTACTE')
		
		UNION
		SELECT fc.fecha, 'Nota de Crédito' as tipo, fc.codigo, fc.codcliente, fc.nombrecliente, fc.total, fc.coddivisa, '' as observaciones
		FROM facturascli AS fc WHERE fc.tipoventa = 'Nota de Crédito'
		
		UNION
		SELECT fc.fecha, 'Nota de Débito' as tipo, fc.codigo, fc.codcliente, fc.nombrecliente, fc.total, fc.coddivisa, '' as observaciones
		FROM facturascli AS fc WHERE fc.tipoventa = 'Nota de Débito'
		
		UNION
		SELECT pmc.fecha, 'Recibo de Cobro' as tipo, pmc.idpagomulti::varchar as codigo, pmc.codcliente, pmc.nombrecliente, pmc.total, pmc.coddivisa, '' as observaciones
		FROM pagosmulticli AS pmc
		
		) AS consultasalidas
	</from>
	
	<where>
	</where>
	
	<order>
		consultasalidas.fecha ASC
	</order>
</QRY>
